{
  "name": "KTH",
  "displayName": "teachMe",
  "description": "This extension will teach you to learn interactively",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:kth-conversational-view"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "KTH.helloWorld",
      "title": "Hello World"
    }],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kth-conversation",
          "title": "Teach Me",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "kth-conversation": [
        {
          "type": "webview",
          "id": "kth-conversational-view",
          "name": "Conversation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "pnpm run lint",
    "test": "vscode-test"
  },
  "dependencies": {
    "openai": "6.7.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.36.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
